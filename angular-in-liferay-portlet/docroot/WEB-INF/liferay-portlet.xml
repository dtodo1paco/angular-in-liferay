<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>angular</portlet-name>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/semantic-2.1.7/semantic.min.css</header-portlet-css>
		<header-portlet-css>/css/fonts/font-open-sans.css</header-portlet-css>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<!-- Include libraries in header section -->
		<header-portlet-javascript>/js/angular-1.4.8/angular.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/angular-1.4.8/angular-route.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/angular-1.4.8/angular-resource.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/angular-ui/ui-bootstrap-tpls-0.7.0.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/angular-ui/ui-format.js</header-portlet-javascript>
		<header-portlet-javascript>/js/jquery-2.1.4/jquery.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/semantic-2.1.7/semantic.min.js</header-portlet-javascript>

		<!-- Include app specific in footer section -->
		<!-- First, the configuration in order to be considered when defining controllers 
			and services -->
		<footer-portlet-javascript>/js/ng-app/app_config.js</footer-portlet-javascript>
		<!-- Services -->
		<footer-portlet-javascript>/js/ng-app/services/role.js</footer-portlet-javascript>
		<!-- Controllers -->
		<footer-portlet-javascript>/js/ng-app/controllers/role-list.js</footer-portlet-javascript>
		<!-- The app -->
		<footer-portlet-javascript>/js/ng-app/app.js</footer-portlet-javascript>
		<!-- Manually bootstrap angularJS -->
		<footer-portlet-javascript>/js/ng-app/app_bootstrap.js</footer-portlet-javascript>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>